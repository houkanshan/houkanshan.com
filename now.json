{
  "version": 2,
  "name": "houkanshan.com",
  "routes": [
    { "src": "/nainais-recipe", "status": 302, "headers": { "Location": "https://houkanshan.itch.io/nainais-recipe" } },
    { "src": "/works/", "dest": "/" },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "/(.*\\.(js|json|css|ico|png)$)",
      "dest": "/$1",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    }
  ],
  "alias": ["houkanshan.com", "www.houkanshan.com"],
  "builds": [
    {
      "use": "@now/static-build",
      "src": "package.json",
      "config": {
        "distDir": "public"
      }
    }
  ]
}
