.showcase
  line-height: 1rem
  .title
    font-size: 0.9rem
    font-weight: 500
    margin: 0.6rem 0 0.5rem
  .content
    font-size: 14px
    margin-bottom: 0.5rem
  .desc
  .date
    font-size: 12px
    color: var(--grayColor)
  &[data-is-detailed=true]
    .works-item
      margin-bottom: 1rem
      display: flex
    .works-hd
      margin-right: 1rem
    p
      margin-bottom: 0
    @media (max-width: 490px)
      .works-item
        display: block
      .works-hd
        margin-right: 0
      .title
        height: 2rem
  &[data-is-detailed=false]
    display: grid
    grid-template-columns: repeat(auto-fit, 224px)
    grid-column-gap: 1rem
    grid-row-gap: 1rem

  // Video / Image
  .image-wrapper
    display: block
    z-index: 10
  .video-wrapper
    position: absolute
    top: 0
    z-index: 0
  .cover[data-has-video=true]:hover
    .image-wrapper
      display: none!important