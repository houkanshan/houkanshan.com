.showcase
  line-height: 1.3
  .title
    font-size: 18px
  .content
    font-size: 14px
    margin-top: 10px
  .desc
  .date
    font-size: 12px
    color: var(--grayColor)
    margin-top: 3px
  .desc
    margin-top: 5px
  &[data-is-detailed=true]
    .works-item
      margin-bottom: 1rem
      display: flex
    .works-hd
      margin-right: 1rem
    p
      margin-bottom: 0
    @media (max-width: 490px)
      .works-item
        display: block
      .works-hd
        margin-right: 0
      .title
        margin-top: 5px
  &[data-is-detailed=false]
    display: grid
    grid-template-columns: repeat(auto-fit, 224px)
    grid-column-gap: 1rem
    grid-row-gap: 1rem
    .title
      margin-top: 10px

  // Video / Image
  .image-wrapper
    display: block
  .cover[data-has-video=true]:hover
    .image-wrapper
      display: none!important